    <view class="addressCard">
        <view class="cardWarp">
            <view class="cardText">目标国收件信息</view>
            <view class="cueWarp flex_b_c">
                <view class="cueText" style="color: {{status ? cueColor : inColor}};">
                    <van-icon name="info-o" />
