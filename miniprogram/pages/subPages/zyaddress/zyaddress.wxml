                </view>
                <view class="addressBtn flex_c_c" bindtap="skipAddress">
                    选择地址
                </view>
            </view>
        </view>
        <view class="addressWarp">
            <view class="addressItem" wx:for="{{userInfo}}" wx:key="id">
                <text class="title">{{item.title}}:</text>
                <input class="input" style="color: {{item.state ? '': inColor}};" data-item="{{item}}" type="text" data-index="{{index}}" bindinput="inputVal" placeholder="{{item.value}}" />
