<!--pages/subPages/Insureddetail/Insureddetail.wxml-->
<view class="container">
    <view class="insuredCard">
        <view class="orderId">
            <view>订单号： <text>20220509140712345678</text></view>
            <view class="flex_l_c iconWarp">
                <view class="cardIcon">
                    <image class="img" mode="aspectFit" src="../../../assets/images/bj.svg"></image>
                </view>
                <text class="title">保价</text>
            </view>
            <view class="inputWarp">
                <input class="input" bindblur="onChangeInput" placeholder="自定义物品价格，请填写真实物品价格" type="text" />
            </view>
        </view>
    </view>

    <view class="insuredCard" wx:for="{{cardData}}" wx:key="id">
        <view class="warningWarp">
            <view class="warningText">
                <van-icon name="info-o" />
                <view>
                    <view>{{item.text}}</view>
                    <view>{{item.text2}}</view>
                </view>
            </view>

            <view class="switchContent">
                <view class="switchWarp flex_b_c">
                    <text>{{item.id === 1 ? '丢失险（保价的' + item.cost + '%）' : '关税险（保价的'+ item.cost + '%)'}}</text>
                    <van-switch checked="{{ item.state }}" bindchange="onChange" data-item="{{item}}" size="24px" />
                </view>
            </view>
            <view class="premium">
                {{item.id === 1 ? "保险费：￥" : "关税险：￥"}}{{item.price}}
            </view>
        </view>
    </view>

    <view class="btnWarp">
        <view class="btn flex_c_c">联系客服</view>
        <view class="btn flex_c_c" style="background-color: #6fba34;" bindtap="dialog">下一步</view>
    </view>

    <van-dialog show="{{isShow}}"  id="van-dialog" />
</view>