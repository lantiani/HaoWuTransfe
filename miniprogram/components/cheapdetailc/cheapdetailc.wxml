<!--components/cheapdetailc/cheapdetailc.wxml-->
<view class="container">
    <view class="cheapWarp">
        <view class="cheapTop flex_a_c">
            <view class="cheapLeft">
                <view class="cheapPrice">
                    <text class="icon">￥</text>
                    <text class="price">10</text>
                </view>
                <view class="priceText">
                    满599使用
                </view>
            </view>
            <view class="cheapRight">
                <view class="cheapTitle">
                    <text class="reduce">满减卷</text>
                    <text class="text">双十一无门槛卷</text>
                </view>
                <view class="expire flex_c_c">
                    2022.10.10到期
                    <text class="down">（仅剩一天）</text>
                    <view class="btn flex_c_c" bindtap="receive" data-coupon="自己来设置">
                        立即领取
                    </view>
                </view>
            </view>
        </view>
        <view class="all flex_b_c">
            <text>全场通用</text>
            <van-icon name="arrow-down" />
        </view>
    </view>


    <view class="chearpContent">
        <view class="title">使用须知</view>
        <view class="notice">
            <view class="validity">
                有效期：
                2022-04-29至2022-06-01 23:59
            </view>

            <view class="disabled">不可用日期：</view>
            <view>
                2022年2月1日至2022年2月4日，12月26日以后开始使用
            </view>
            <view>使用时间：</view>
            <view>00:00-23:59</view>
            <view>适用范围：</view>
            <view>全场通用</view>

            <view class="rule">使用规则</view>
            <view>
                。适用于运费
            </view>
            <view>
                。适用于普通货物，电子产品
            </view>
            <view>
                。使用优惠券下单，有效期以优惠券规则为准
            </view>
            <view>
                。不可叠加使用
            </view>
            <view>
                。不兑现、不提现
            </view>

        </view>
    </view>
</view>